<p id="notice"><%= notice %></p>

<h1>Coins <%=calcAvg([1,2,3,4,5])%> </h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Acronomym</th>
      <th>Url image</th>
      <th> T</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>

      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronomym %></td>
        <td><img src="<%= coin.url %>" width="25px" height="25px"></td>
        <td><%=coin.mining_type&.acronym %> </td>
        <!-- <td><%# link_to 'Show', coin %></td> -->
        <td><%= link_to 'Edit', edit_coin_path(coin) %></td>
        <td><%= link_to 'Destroy', coin, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Coin', new_coin_path %>
